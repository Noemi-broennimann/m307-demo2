
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/profil"><img src="/public/uploads/person.png" alt="Profil"></a>
        </a>
        <a href="/">Grafikforum</a>
      </nav>
    </header>
    <!-- Container-Bereich -->
    <div class="container">
      {{#each users}}
      <div class="form-box">
        <h2>{{email}}</h2>
      </div>
      {{/each}}
    </div>
    <div class="container_name">
        <div class="form-box">
            <a href="/profil">MEINE POSTS</a>
            <a href="/favoriten">FAVORITEN</a>
        </div>
     
      </div>
      <div class="container">
      <div class="form-box">
        <a href="/new-post">+ Neuer Beitrag</a>
      </div>
      <div class="myposts">
        {{#if posts.length}}
          <ul>
            {{#each posts}}
              <li>
               
               
                <img src="/public/uploads/{{bild}}" alt="Post image" />
                <h2>{{titel}}</h2>
                
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p>Du hast noch keine Beitr√§ge. Erstelle deinen ersten Post!</p>
        {{/if}}
      </div>
 
  </body>
</html>